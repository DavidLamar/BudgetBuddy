<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Settings"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Settings"
    tools:showIn="@layout/activity_settings_"
    android:background="#FFFFFF">

    <Button
        android:layout_width="144sp"
        android:layout_height="52sp"
        android:text="Clear user data"
        android:id="@+id/button6"
        android:onClick="deleteUserData"
        android:background="#f0f0f0"
        android:gravity="center"
        android:layout_above="@+id/button25"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:id="@+id/imageView5"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button13"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:onClick="selectHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:stepSize="1.0"
        android:layout_above="@+id/button13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/RateUs"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="144sp"
        android:layout_height="52sp"
        android:text="Delete Purchases"
        android:id="@+id/button25"
        android:background="#f0f0f0"
        android:layout_above="@+id/button26"
        android:layout_alignLeft="@+id/button26"
        android:layout_alignStart="@+id/button26"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:onClick="deletePurchases" />

    <Button
        android:layout_width="144sp"
        android:layout_height="52sp"
        android:text="About Us"
        android:id="@+id/button26"
        android:background="#f0f0f0"
        android:layout_above="@+id/button27"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:onClick="selectAbout" />

    <Button
        android:layout_width="144sp"
        android:layout_height="52sp"
        android:text="Purchase History"
        android:id="@+id/button27"
        android:background="#f0f0f0"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/button26"
        android:layout_alignStart="@+id/button26"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginBottom="32sp"
        android:onClick="viewPurchases" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us!"
        android:id="@+id/RateUs"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>
